@model ExameTeste.Models.ViewModels.PessoaFormViewModel

@{
    ViewData["title"] = "Editar Pessoa";
}
<h2>@ViewData["title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="pessoa.Id" />
            <div class="form-group">
                <label asp-for="pessoa.Name" class="control-label">Nome</label>
                <input asp-for="pessoa.Name" class="form-control" />
                <span asp-validation-for="pessoa.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pessoa.Age" class="control-label">Idade</label>
                <input asp-for="pessoa.Age" class="form-control" />
                <span asp-validation-for="pessoa.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pessoa.BirthDate" class="control-label">Data de Nascimento</label>
                <input asp-for="pessoa.BirthDate" class="form-control" />
                <span asp-validation-for="pessoa.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="pessoa.Active" /> @Html.DisplayNameFor(model => model.pessoa.Active)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="pessoa.FaixaEtariaId" class="control-label"></label>
                <select asp-for="pessoa.FaixaEtariaId" asp-items="@(new SelectList(Model.FaixaEtarias,"Id","Classificação"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-defautl" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

